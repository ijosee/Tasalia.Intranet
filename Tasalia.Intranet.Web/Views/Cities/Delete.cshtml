@model Tasalia.Intranet.DataBase.Models.City

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Eliminar</h1>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">¿Estás seguro de eliminar este elemento?</h3>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.ProcessGuid)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.ProcessGuid)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.City1)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.City1)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Code)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Code)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.CreateDate)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.CreateDate)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.UpdateDate)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.UpdateDate)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.State)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.State.StateId)
                                </dd>
                            </dl>

                            <form asp-action="Delete">
                                <input type="hidden" asp-for="CityId" />
                                <input type="submit" value="Eliminar" class="btn btn-danger" /> |
                                <a asp-action="Index">Volver a la lista</a>
                            </form>
                        </div>
                        <div class="card-footer">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
